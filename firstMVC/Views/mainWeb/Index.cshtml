@model firstMVC.Models.CustomerStruct
@{
    string sss = ViewBag.Title;
    Layout = "~/Views/master/masterpage.cshtml";

}

<h2>Index</h2>
@foreach (var aa in ViewBag.Langs)
{
    <div class="row">
        <hr />
        <hr />
        @aa
    </div>
}
<hr />
@for (int i = 0; i < 10; i++)
{
    <div class="row">
        @sss
    </div>
}

@using (Html.BeginForm("getUser", "mainWeb", FormMethod.Post, new { @class = "container form-control" }))
{


    for (int i = 0; i < 10; i++)
    {
        <div class="row">
            sss
        </div>
    }


    @Html.AntiForgeryToken()
    <div class="form-inline">
        <div class="form-group">
            <label for="email">Email address:</label>
            @Html.TextBoxFor(m => m.name, new { placeholder = "EnterName", required = "required" })
            <br />
            @Html.ValidationMessageFor(model => model.name, "Insert @ ", new { @class = "text-danger", @style = "color:red;" })
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            @Html.TextBoxFor(m => m.password, new { placeholder = "Enterpassword", required = "required" })
        </div>

        <button type="submit" class="btn btn-success">Submit</button>

    </div>

}